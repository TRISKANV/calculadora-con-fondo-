<ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6000000"> <ImageView
        android:id="@+id/ivLockIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="80dp"
        android:src="@android:drawable/ic_lock_lock"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_start_toStartOf="parent"
        app:layout_end_toEndOf="parent"
        app:tint="@white" />

    <TextView
        android:id="@+id/tvInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IngresÃ¡ tu PIN"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ivLockIcon"
        app:layout_start_toStartOf="parent"
        app:layout_end_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/pinIndicatorLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tvInstruction"
        app:layout_start_toStartOf="parent"
        app:layout_end_toEndOf="parent">
        <View android:layout_width="12dp" android:layout_height="12dp" android:layout_margin="10dp" android:background="@drawable/pin_dot"/>
        <View android:layout_width="12dp" android:layout_height="12dp" android:layout_margin="10dp" android:background="@drawable/pin_dot"/>
        <View android:layout_width="12dp" android:layout_height="12dp" android:layout_margin="10dp" android:background="@drawable/pin_dot"/>
        <View android:layout_width="12dp" android:layout_height="12dp" android:layout_margin="10dp" android:background="@drawable/pin_dot"/>
    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/pinIndicatorLayout"
        app:layout_start_toStartOf="parent"
        app:layout_end_toEndOf="parent">

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="1"
            android:background="@drawable/boton_circular_selector"
            android:textColor="@white"
            android:textSize="24sp"
            android:layout_margin="15dp"/>
        </GridLayout>

</ConstraintLayout>
