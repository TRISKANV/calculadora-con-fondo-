<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <GridView
        android:id="@+id/gridViewFotos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3"
        android:verticalSpacing="4dp"
        android:horizontalSpacing="4dp"
        android:padding="4dp"
        android:stretchMode="columnWidth"
        android:gravity="center" />

    <ImageButton
        android:id="@+id/btnAgregarFoto"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="24dp"
        android:background="@android:drawable/btn_default"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="Agregar" />
   
    <ImageButton
    android:id="@+id/btnNavegador"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true"
    android:layout_margin="20dp"
    android:background="@drawable/boton_redondo_azul"
    android:src="@drawable/ic_mundo_secreto" 
    android:scaleType="centerInside"
    android:padding="8dp"
    android:contentDescription="Navegador" />

</RelativeLayout>
