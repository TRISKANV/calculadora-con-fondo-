<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:columnCount="4"
    android:rowCount="6"
    android:padding="10dp">

    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="4"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="20dp"
        android:gravity="end"
        android:padding="20dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="80sp" />

    <Button style="@style/BotonGrisClaro" android:text="AC" />
    <Button style="@style/BotonGrisClaro" android:text="+/-" />
    <Button style="@style/BotonGrisClaro" android:text="%" />
    <Button style="@style/BotonNaranja" android:text="รท" />

    <Button style="@style/BotonGrisOscuro" android:id="@+id/btn7" android:text="7" />
    <Button style="@style/BotonGrisOscuro" android:id="@+id/btn8" android:text="8" />
    <Button style="@style/BotonGrisOscuro" android:id="@+id/btn9" android:text="9" />
    <Button style="@style/BotonNaranja" android:text="ร" />

    <Button style="@style/BotonGrisOscuro" android:id="@+id/btn4" android:text="4" />
    <Button style="@style/BotonGrisOscuro" android:id="@+id/btn5" android:text="5" />
    <Button style="@style/BotonGrisOscuro" android:id="@+id/btn6" android:text="6" />
    <Button style="@style/BotonNaranja" android:text="-" />

    <Button style="@style/BotonGrisOscuro" android:id="@+id/btn1" android:text="1" />
    <Button style="@style/BotonGrisOscuro" android:id="@+id/btn2" android:text="2" />
    <Button style="@style/BotonGrisOscuro" android:id="@+id/btn3" android:text="3" />
    <Button style="@style/BotonNaranja" android:text="+" />

    <Button 
        android:id="@+id/btn0"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_columnSpan="2"
        android:background="@drawable/button_round"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="30sp" />
    <Button style="@style/BotonGrisOscuro" android:text="." />
    <Button style="@style/BotonNaranja" android:id="@+id/btnIgual" android:text="=" />

</GridLayout>
