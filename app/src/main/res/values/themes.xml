<resources xmlns:tools="http://schemas.android.com/tools">
    
    <style name="Theme.CalculadoraGaga" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">#1C1C1C</item>
        <item name="android:statusBarColor">#252525</item>
    </style>

    <style name="PinButtonStyle">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:background">@drawable/boton_circular</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@null</item> </style>

    <style name="BotonBase">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">65dp</item> 
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BotonCientifico" parent="BotonBase">
        <item name="android:backgroundTint">#37474F</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BotonNumero" parent="BotonBase">
        <item name="android:backgroundTint">#424242</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BotonOperador" parent="BotonBase">
        <item name="android:backgroundTint">#FF9800</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="BotonAccion" parent="BotonBase">
        <item name="android:backgroundTint">#D32F2F</item>
    </style>

    <style name="BotonIgual" parent="BotonBase">
        <item name="android:backgroundTint">#2E7D32</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
